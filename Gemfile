source 'https://rubygems.org'

gem 'jekyll'
gem 'bundler'

group :jekyll_plugins do
  gem 'github-pages'
  gem "jekyll-github-metadata"
  gem "jekyll-octicons"
  gem "jemoji"
  gem 'dotenv', '~> 2.7'
end

group :development do
    gem "ruby-lsp", require: false
    gem 'html-proofer'
    gem "webrick", "~> 1.8"
end
